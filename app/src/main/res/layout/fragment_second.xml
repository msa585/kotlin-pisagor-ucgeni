<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/dikucgenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dikucgen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dikucgenView"
        app:layout_constraintTop_toTopOf="@+id/dikucgenView" />

    <TextView
        android:id="@+id/bView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dikucgenView"
        app:layout_constraintEnd_toEndOf="@+id/dikucgenView" />

    <TextView
        android:id="@+id/cView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dikucgenView"
        app:layout_constraintStart_toStartOf="@+id/dikucgenView" />

    <EditText
        android:id="@+id/abSide"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="AB Kenarı :"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/dikucgenView"
        app:layout_constraintStart_toStartOf="@+id/dikucgenView"
        app:layout_constraintTop_toBottomOf="@+id/dikucgenView" />

    <EditText
        android:id="@+id/bcSide"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="BC Kenarı :"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/abSide"
        app:layout_constraintStart_toStartOf="@+id/abSide"
        app:layout_constraintTop_toBottomOf="@+id/abSide" />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="hesapla"
        app:layout_constraintEnd_toEndOf="@+id/bcSide"
        app:layout_constraintStart_toStartOf="@+id/bcSide"
        app:layout_constraintTop_toBottomOf="@+id/bcSide" />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Sonuc :"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/hesapla"
        app:layout_constraintStart_toStartOf="@+id/hesapla"
        app:layout_constraintTop_toBottomOf="@+id/hesapla" />


</androidx.constraintlayout.widget.ConstraintLayout>